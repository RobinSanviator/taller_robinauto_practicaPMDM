<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp">

    <LinearLayout
        android:id="@+id/linearLayoutContenidoReparacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/fondo">


        <TextView
            android:id="@+id/tvNombreApellidoMecanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_nombre"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="@string/textoMecanico"
            android:textColor="@color/color_texto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCorreoMecanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textoCorreo"
            android:drawableStart="@drawable/ic_correo"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="@color/color_texto"/>

        <TextView
            android:id="@+id/tvPuestoMecanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textoMecanico"
            android:drawableStart="@drawable/ic_mecanico"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="@color/color_texto"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>