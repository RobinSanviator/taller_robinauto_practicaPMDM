<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewCocheSeleccionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textoCocheSeleccionado"
        android:textColor="@color/color_principal"
        android:drawableStart="@drawable/ic_coche"
        android:drawablePadding="8dp"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerCocheNuevaReparacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:minHeight="48dp"
        android:text="@string/textoCliente"
        android:textColor="@color/color_texto"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewMostrarMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoMarcaCoche" />

    <TextView
        android:id="@+id/textViewmostrarModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoModeloCoche" />

    <TextView
        android:id="@+id/textViewMostrarMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoMatriculaCoche" />


    <TextView
        android:id="@+id/textViewMostrarCorreoMecanicoJefe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoMecanico" />



    <TextView
        android:id="@+id/textViewCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textoCliente"
        android:textColor="@color/color_principal"
        android:drawableStart="@drawable/ic_nombre"
        android:drawablePadding="8dp"
        android:textSize="18sp"/>


    <Spinner
        android:id="@+id/spinerClienteNuevaReparacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:minHeight="48dp"
        android:text="@string/textoCliente"
        android:textColor="@color/color_texto"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewMostrarCorreoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoClienteReparacion" />

    <TextView
        android:id="@+id/textViewPresupuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textoIntroducePresupuesto"
        android:textColor="@color/color_principal"
        android:drawableStart="@drawable/ic_presupuesto"
        android:drawablePadding="8dp"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/editTextPresupuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:minHeight="48dp"
        android:inputType="numberDecimal"
        tools:ignore="SpeakableTextPresentCheck" />


</LinearLayout>
