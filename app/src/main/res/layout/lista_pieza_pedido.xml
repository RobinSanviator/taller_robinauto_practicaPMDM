<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="16dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:background="@color/fondo"
        android:padding="16dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/imageViewIconoPiezaPedido"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/pieza"
            android:layout_marginEnd="16dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRecomendado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="2dp"
                android:text="@string/textoRecomendadoPieza"
                android:textSize="14sp"
                android:textColor="@color/color_recomendadoPedido"/>

            <TextView
                android:id="@+id/textViewNombrePieza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/textoNombre"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_texto" />

            <TextView
                android:id="@+id/textViewPrecioPiezaPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginTop="4dp"
                android:text="@string/precioPieza"
                android:textSize="16sp"
                android:textColor="@color/color_texto" />


        </LinearLayout>

       <com.google.android.material.button.MaterialButton
           android:id="@+id/buttonAnadirPiezaPedido"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/azul"
           app:cornerRadius="30dp"
           android:padding="8dp"
           android:text="@string/textoAnadirPieza"
           android:textColor="@color/color_texto"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>