    <!--Switch modo oscuro-->
    <style name="switchModoOscuro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/color_principal</item>
        <item name="colorSwitchThumbNormal">@color/color_texto</item>
    </style>


</resources>