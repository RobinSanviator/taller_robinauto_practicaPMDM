<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppThemeDarkMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_principal</item>
        <item name="colorSecondary">@color/color_secundario</item>
        <item name="colorOnPrimary">@color/color_texto</item>
        <item name="colorOnBackground">@color/color_texto</item>
        <item name="colorError">@color/color_error</item>
